{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "declaration": true,
    "strictPropertyInitialization": false,

    // Handled in linting, useful for testing
    "allowUnreachableCode": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "importHelpers": true
  }
}
