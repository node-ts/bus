{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,

    // Handled in linting, useful for testing
    "allowUnreachableCode": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "importHelpers": true
  }
}
