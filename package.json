{
  "name": "@node-ts/bus",
  "version": "0.0.1",
  "main": "index.js",
  "description": "A service bus for message-based, distributed node applications",
  "repository": "github:node-ts/bus.git",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "build:watch": "lerna run --parallel build:watch --stream",
    "clean": "lerna run clean && rm -r node_modules",
    "lint": "lerna run lint --stream",
    "test": "dotenv -e test.env -- jest --collect-coverage",
    "test:unit": "dotenv -e test.env -- jest \"(src\\/.+\\.|/)spec\\.ts$\"",
    "test:integration": "dotenv -e test.env -- jest --runInBand \"bus-(core|postgres).*(src\\/.+\\.|/)integration\\.ts$\"",
    "test:watch": "dotenv -e test.env -- jest --watch"
  },
  "keywords": [
    "typescript",
    "enterprise service bus",
    "distributed system",
    "message bus",
    "message queue",
    "node"
  ],
  "jest": {
    "testTimeout": 5000,
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/dist/**",
      "!**/bus-messages/**",
      "!**/error/*"
    ],
    "testRegex": "(src\\/.+\\.|/)(integration|spec)\\.ts$",
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true,
          "loaders": {
            ".spec.ts": "tsx",
            ".integration.ts": "tsx"
          }
        }
      ]
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/",
      "bus-test/"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@node-ts/code-standards": "^0.0.10",
    "@types/jest": "^26.0.23",
    "dotenv-cli": "^4.0.0",
    "esbuild": "^0.12.12",
    "esbuild-jest": "^0.5.0",
    "jest": "^27.0.5",
    "lerna": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "supports-color": "^9.0.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
